extends ../layout

block content
    h1= title

    //if formErrors.errors !== undefined
    //    each message in formErrors.errors
    //        p=message



    form(method="POST")
        p
            label Title
            input(type='text' name='title' value=body.title || "")
            if formErrors.errors !== undefined
                span=' ' + formErrors.errors.title ? formErrors.errors.title : ""

        p
            label Description
            textarea(name='description')=body.description || ""
            if formErrors.errors !== undefined
                span=' ' + formErrors.errors.description ? formErrors.errors.description : ""
        p
            input(type='submit' value='Save')